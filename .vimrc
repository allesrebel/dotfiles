syntax on
" Note: Indent works with autoindent
filetype plugin indent on
set autoindent
" Just makes it a little less crazy horizontially
set tabstop=3

set encoding=utf-8
set fileencodings=iso-2022-jp,euc-jp,sjis,utf-8
set fileformats=unix,dos,mac
set path+=**
set wildmenu
set autoread

colorscheme default

set exrc
