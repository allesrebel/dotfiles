syntax on
" Note: Indent works with autoindent
filetype plugin indent on
set autoindent
set wrap linebreak

" Just makes it a little less crazy horizontially
" and insert tabs when I want them, and spaces
" when I want them
set tabstop=3
set softtabstop=0
set shiftwidth=0

set encoding=utf-8
set path+=**
set wildmenu
set autoread

colorscheme default

set exrc
